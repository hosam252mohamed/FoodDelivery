@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-item nav-link">Profile</a>
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="nav-item nav-link" style="background: none;">Logout</button>
    </form>
}
else
{
    <a id="register" asp-area="Identity" asp-page="/Account/Register" class="nav-item nav-link">Register</a>
    <a id="login" asp-area="Identity" asp-page="/Account/Login" class="nav-item nav-link">Login</a>
}
