@model IEnumerable<FoodDelivery.Models.OrderHeader>

@{
    ViewData["Title"] = "My Orders";
}

@section Styles {
    <style>
        .table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

            .table thead {
                background-color: #343a40;
                color: white;
            }

            .table th,
            .table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

        .table-hover tbody tr:hover {
            background-color: #f5f5f5;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .card {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
}

<h2 class="mb-4">My Orders</h2>

<div class="card mt-4 p-4">
    <table id="tblData" class="table table-hover table-striped ">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Order Status</th>
                <th>Payment Status</th>
                <th>Details</th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                autoWidth: false,
                "responsive": true,
                "ajax": { url: '/Customer/Order/GetAll' },
                "columns": [
                    { data: 'id', "width": "5%" },
                    { 
                        data: 'orderDate', 
                        render: function (data) {
                            var dateCreated = new Date(data);
                            var date = dateCreated.toLocaleString();
                            return date;
                        },
                        width: "30%" },
                    { 
                        data: 'orderTotal',
                        render: function (data) {
                            if(data == 0) return "Free"
                            return `$${data}`
                        },
                        width: "15%" 
                    },
                    { data: 'orderStatus', "width": "15%" },
                    { data: 'paymentStatus', "width": "15%" },
                    {
                        data: 'id',
                        render: function (data) {
                            return `<div>
                                     <a href="/customer/order/details/${data}" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i></a>
                                    </div>`
                        },
                        width: "15%"
                    },
                ]
            });
        }
    </script>
}