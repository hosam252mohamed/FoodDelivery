@model bool
@{
    ViewData["Title"] = "Booking Confirmation";
}

@section Styles {
    <style>
        /* Main container styling */
        .confirmation-container {
            margin-top: 3.5rem;
            text-align: center;
            animation: fadeIn 1.5s ease;
        }

            /* Title styling */
            .confirmation-container h2 {
                color: #FF8C00;
                font-size: 2.5rem;
                font-weight: bold;
                margin-bottom: 1.5rem;
            }

            /* Text paragraph styling */
            .confirmation-container p {
                font-size: 1.2rem;
                color: #333;
                margin-bottom: 2rem;
            }

        /* Button styling */
        .btn-custom-orange {
            background-color: #FF8C00;
            margin-bottom: 2rem;
            border-color: #FF8C00;
            color: #fff;
            padding: 10px 20px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .btn-custom-orange:hover {
                background-color: #FF6500;
                border-color: #FF6500;
            }

        /* Fade in animation */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>
}

<div class="container confirmation-container">
    @if (Model == true)
    {
        <h2>Thank you for your reservation!</h2>
        <p>We have received your booking and will contact you soon.</p>
    }
    else
    {
        <h2>Not Found Page</h2>
    }
    <a href="/" class="btn btn-custom-orange">Back to Home</a>
</div>
